<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="pcastro" id="1">
        <createSequence minValue="1" incrementBy="1"
                        sequenceName="hibernate_sequence"/>
    </changeSet>

    <changeSet author="pcastro" id="2">
        <createTable tableName="users">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="users"/>
        </rollback>
        <modifySql dbms="mysql">
            <append value="engine innodb"/>
        </modifySql>
    </changeSet>

    <changeSet author="pcastro" id="addColumn">
        <addColumn tableName="users">
            <column afterColumn="username"
                    name="created_at"
                    type="datetime">
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="pcastro" id="addEnabledColumn">
        <addColumn tableName="users">
            <column beforeColumn="created_at"
                    name="enabled"
                    type="boolean">
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="pcastro" id="inserts">
        <sqlFile dbms="mysql" path="db.changelog/sql/insert_users.sql"/>
    </changeSet>

</databaseChangeLog>
